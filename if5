/*Enter number 20    >0
-->number is positive
Enter number -20    <0
-->number is negative
Enter number 0
-->number is zero
*/
#include <stdio.h>
#include <conio.h>
int main()
{
	int a;
	printf ("\nEnter a number ");
	scanf ("%d",&a);
	if (a>0)
		printf ("\nNumber is positive");
	else if (a<0)	
		printf ("\nNumber is negative");
	else
		printf ("\nNumber is zero");
	getch();
	return 0;
}



